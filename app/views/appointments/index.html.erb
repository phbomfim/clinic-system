<div>
    <div class="row mt-5 mb-3">
        <div class="col-md-6">
            <h3 class="">Appointments</h3>
        </div>
        <div class="col-md-6 text-end">
            <%= link_to "Create a Appointment", new_appointment_path, class: "btn btn-outline-primary mt-2"%>
        </div>
    </div>
    <table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Starts At</th>
            <th scope="col">Ends At</th>
            <th scope="col">Patient ID</th>
            <th scope="col">Doctor ID</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        <% @appointments.each do |ap| %>
            <tr>
                <th scope="row"><%= ap.id %></th>
                <td><%= l ap.starts_at %></td>
                <td><%= l ap.ends_at %></td>
                <td><%= ap.patient_id %></td>
                <td><%= ap.doctor_id %></td>
                <td><%= link_to "Edit", edit_appointment_path(ap) %> |
                    <%= link_to "Delete", appointment_path(ap), data: { confirm: "Are you sure?" }, :method => :delete %></td>
            </tr>
        <% end %>
    </tbody>
    </table>
</div>