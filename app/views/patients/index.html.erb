<div>
    <div class="row mt-5 mb-3">
        <div class="col-md-6">
            <h3 class="">Patients</h3>
        </div>
        <div class="col-md-6 text-end">
            <%= link_to "Create a patient", new_patient_path, class: "btn btn-outline-primary mt-2"%>
        </div>
    </div>
    <table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Birth date</th>
            <th scope="col">CPF</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        <% @patients.each do |pat| %>
            <tr>
                <th scope="row"><%= pat.id %></th>
                <td><%= pat.name %></td>
                <td><%= pat.birth_date.strftime('%d/%m/%Y') %></td>
                <td><%= pat.cpf %></td>
                <td><%= link_to "Edit", edit_patient_path(pat) %> |
                    <%= link_to "Delete", patient_path(pat), data: { confirm: "Are you sure?" }, :method => :delete %></td>
            </tr>
        <% end %>
    </tbody>
    </table>
</div>